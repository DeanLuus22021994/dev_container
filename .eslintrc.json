{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-console": "off",
    "no-unused-vars": "warn"
  },
  "ignorePatterns": ["out/", "dist/", "node_modules/"],
  "env": {
    "node": true,
    "jest": true,
    "browser": true,
    "es6": true
  },
  "globals": {
    "process": true,
    "require": true,
    "module": true,
    "__dirname": true,
    "globalThis": true,
    "fetch": true
  }
}
