{
  "name": "cicd-automation-project",
  "displayName": "CI/CD Automation",
  "version": "1.0.0",
  "description": "A VS Code extension for CI/CD automation using dev containers",
  "publisher": "cicd-automation",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "cicd_automation.helloWorld",
        "title": "CI/CD: Hello World"
      },
      {
        "command": "cicd_automation.runWorkflow",
        "title": "CI/CD: Run Workflow"
      },
      {
        "command": "workflowExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "workflowExplorer",
          "name": "GitHub Workflows",
          "icon": "$(github)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "workflowExplorer.refresh",
          "when": "view == workflowExplorer",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:js": "eslint src --ext js",
    "lint:fix": "eslint src --ext ts,js --fix && eslint out --ext js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "format:js": "node -e \"require('os').platform() === 'win32' ? require('child_process').execSync('scripts\\\\format-js.bat', {stdio: 'inherit'}) : require('child_process').execSync('bash ./scripts/format-js.sh', {stdio: 'inherit'})\"",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "cicd",
    "devcontainer",
    "automation",
    "github",
    "workflows"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^16.18.60",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.2",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "@vscode/test-electron": "^2.3.9",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "glob": "^8.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "sinon": "^20.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.1",
    "typescript": "^5.0.4"
  }
}
